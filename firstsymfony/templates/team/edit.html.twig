{% extends 'base.html.twig' %}

{% block title %}¤ First Symfony ~ Editer un projet ¤{% endblock %}

{% block body %}
    {{ include('header/header.html.twig') }}
    <h1>Editer une team</h1>

    {{ include('team/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

    <table class="table">
        <tbody>

        {% if team.user|length > 0 %}
            {% for user in team.user %}
                <tr>
                    <th>Membre {{ loop.index }}</th>
                    <td>{{ user.firstName }} {{ user.lastName }}</td>
                    <td>

                        <a href="{{ path('user_edit', {id: user.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <th>Aucun utilisateur associé !</th>
            </tr>
        {% endif %}
        </tbody>
    </table>

    <a href="{{ path('team_index') }}">Retour</a>

    {{ include('team/_delete_form.html.twig') }}
    {{ include('footer/footer.html.twig') }}
{% endblock %}
