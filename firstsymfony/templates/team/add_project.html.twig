{% extends 'base.html.twig' %}

{% block title %}¤ First Symfony ~ Ajouter un projet à votre team ¤{% endblock %}

{% block stylesheets %}
    <style>
        .project {
            background: rgba(0, 0, 0, 0.1);
            border-radius: 20px;
            margin: 5px;
            padding: 5px 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Ajouter un projet à votre team</h1>
    <span>Vous pouvez sélectionner plusieurs projects en maintenant la touche [Ctrl] !</span>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Sauvegarder') }}</button>
    {{ form_end(form) }}

    <div class="selectedProject">
        <span>Project séléctionnés : </span>
        {% for project in projects %}
            <span class="project">{{ project.name }}</span>
        {% else %}
            <span>Aucun projet associé !</span>
        {% endfor %}
    </div>

    <a href="{{ path('team_index') }}">Retour</a>
{% endblock %}
