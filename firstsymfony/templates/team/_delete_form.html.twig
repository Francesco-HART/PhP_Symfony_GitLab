<form method="post" action="{{ path('team_delete', {'id': team.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ team.id) }}">
    <div class="form_center">
        <button class="btn btn-lg btn-primary form-control">Supprimer</button>
    </div>
</form>
