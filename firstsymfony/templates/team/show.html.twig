{% extends 'base.html.twig' %}

{% block title %}¤ First Symfony ~ Team {{ team.name }}¤{% endblock %}

{% block body %}
    {{ include('header/header.html.twig') }}

    <table class="table">
        <tbody>
            {#
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            #}
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            {% if team.user|length > 0 %}
                {% for user in team.user %}
                    <tr>
                        <th>Membre {{ loop.index }}</th>
                        <td>{{ user.firstName }} {{ user.lastName }}</td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <th>Aucun utilisateur associé !</th>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('team_index') }}">Retour</a>

    <a href="{{ path('team_edit', {'id': team.id}) }}">Editer</a>

    {{ include('team/_delete_form.html.twig') }}
    {{ include('footer/footer.html.twig') }}
{% endblock %}
