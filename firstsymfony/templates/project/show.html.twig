{% extends 'base.html.twig' %}

{% block title %}¤ First Symfony ~ Editer un projets ¤{% endblock %}

{% block body %}
    {{ include('header/header.html.twig') }}

    <table class="table">
        <tbody>
            <tr>
                {#<th>Id</th>#}
                {#<td>{{ project.id }}</td>#}
            </tr>
            <tr>
                {#<th>GitlabId</th>#}
                {#<td>{{ project.gitlabId }}</td>#}
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ project.createdAt ? project.createdAt|date('d / m / Y à H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('project_index') }}">Retour</a>

    <a href="{{ path('project_edit', {'id': project.id}) }}">Editer</a>

    {{ include('project/_delete_form.html.twig') }}
    {{ include('footer/footer.html.twig') }}
{% endblock %}
