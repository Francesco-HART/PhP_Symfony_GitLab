{% extends 'base.html.twig' %}

{% block title %}¤ First Symfony ~ Inscription ¤{% endblock %}

{% block body %}
    {{ include('header/header.html.twig') }}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="form_center">
        <h1 style="text-align: center">Inscription</h1>
        {{ form_start(registrationForm) }}
        <label>Email</label>

        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        <label>Prénom</label>
        {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control'}}) }}
        <label>Nom</label>
        {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
        <label>Team</label>
        {{ form_widget(registrationForm.team, {'attr': {'class': 'form-control'}}) }}
        <label>Mot de passe</label>
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
        <label>J'accepte les conditions d'utilisation</label>
        {{ form_widget(registrationForm.agreeTerms) }}
        <button class="btn btn-lg btn-primary form-control" type="submit">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </div>
    {{ include('footer/footer.html.twig') }}
{% endblock %}
